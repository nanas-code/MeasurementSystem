    <h1>{{mode}} Measurement</h1>
    <h2>{{user}}</h2>
    <form action="/measurementform" method="POST">
        <label for="place">Place:</label>
        <input type="text" id="place" name="place" value="{{measurement.place}}" required><br><br>
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" value="{{measurement.date}}" required><br><br>
        <label for="value">Value:</label>
        <input type="number" id="value" name="value" value="{{measurement.value}}" required><br><br>
        <label for="type">Type:</label>
        <input type="text" id="type" name="type" value="{{measurement.type}}" required><br><br>
        <button type="submit">{{mode}}</button>
    </form>

