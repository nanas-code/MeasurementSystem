<h1>{{currentUser.username}}'s Measurements</h1>
{{#if measurements}}
<strong><a href="/newmeasurement">Add new measurements</a></strong>
<ul>
    {{#each measurements}}
   
    <li>{{this.place}} &#10073; {{this.date}} &#10073; {{this.value}} &#10073; {{this.type}}</li>
    &#10073; <a href="/measurement/{{this._id}}">View Details</a>
    &#10073; <a href="/update/{{this._id}}">Edit</a>
    &#10073; <a href="/delete/{{this._id}}">Delete</a><br><br>
    {{/each}}
</ul>
{{else}}
<p>No measurements found.</p>
<strong><a href="/newmeasurement">Add new measurements</a></strong>
{{/if}}

{{#if messages.error}}
  <div class="alert alert-danger" role="alert">
    {{messages.error}}
  </div>
{{/if}}