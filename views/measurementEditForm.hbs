<h1>{{mode}}</h1>
<p>You are currently logged in as {{currentUser.username}}</p>
<form action="/logout" method="post">
  <button type="submit">Logout</button>
</form>
<form action="" method="POST">
  <label for="place">Place:</label>
  <input type="text" id="place" name="place" value="{{measurement.place}}" required><br><br>
  <label for="date">Date:</label>
  <input type="date" id="date" name="date" value="{{formatDate measurement.date "DD MM YYYY"}}" required ><br><br>
  <label for="value">Value:</label>
  <input type="number" id="value" name="value" value="{{measurement.value}}" required><br><br>
  <label for="type">Type:</label>
  <input type="text" id="type" name="type" value="{{measurement.type}}" required><br><br>
  <button type="submit">{{mode}}</button>
</form>

{{#if messages.error}}
<div class="alert alert-danger" role="alert">
  {{messages.error}}
</div>
{{/if}}