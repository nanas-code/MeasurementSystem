<h4>Do you really want to delete this Measurement?</h4>
<form method="POST" action="/user/{{_id}}">
    <label for="place">Place</label>
    <input type="text" id="place" name="place" value = "{{place}}" />
    <label for="date">Date</label>
    <input type="text" id="date" name="date" value = "{{date}}" />
    <label for="value">Value</label>
    <input type="number" id="value" name="value" value = "{{value}}" />
    <label for="type">Type</label>
    <input type="text" id="type" name="type" value = "{{type}}" />
    
    <input type="submit" value="Delete" />
</form>